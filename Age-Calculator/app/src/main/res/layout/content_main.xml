<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.my_pc.agecalculator.activity.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="30sp">


            <TextView
                android:id="@+id/txtdob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:text="Date Of Birth:"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtdob"
                android:background="@drawable/bg"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/dd_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_below="@id/txtdob"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:backgroundTint="#000"
                    android:hint="DD"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="3sp"
                    android:layout_marginBottom="20sp"
                    android:text="/"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/mm_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:backgroundTint="#000"
                    android:hint="MM"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="3sp"
                    android:layout_marginBottom="20sp"
                    android:text="/"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/yyyy_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:backgroundTint="#000"
                    android:hint="YYYY"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/calenderBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="20sp"
                    android:src="@drawable/calendar" />


            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="30sp">


            <TextView
                android:id="@+id/txttd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:text="Today's Date:"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txttd"
                android:background="@drawable/bg"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/dd_td"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_below="@id/txtdob"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:backgroundTint="#000"
                    android:hint="DD"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="3sp"
                    android:layout_marginBottom="20sp"
                    android:text="/"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/mm_td"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:backgroundTint="#000"
                    android:hint="MM"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="3sp"
                    android:layout_marginBottom="20sp"
                    android:text="/"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/yyyy_td"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:backgroundTint="#000"
                    android:hint="YYYY"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/calenderBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="20sp"
                    android:src="@drawable/calendar" />

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/angry_btn"

                android:layout_width="235dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="72dp"
                android:background="@drawable/btn"
                android:shadowColor="#A8A8A8"
                android:shadowDx="10"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Calculate"
                android:textAllCaps="false"
                android:textColor="#FFFCF7"
                android:textSize="30sp"
                android:layout_marginRight="72dp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
